<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bodner67.BarcodeManager"
    android:versionCode="4"
    android:versionName="0.3" >

<uses-sdk android:minSdkVersion="8" />
<uses-permission android:name="android.permission.INTERNET" /> 
<uses-permission android:name="android.permission.CAMERA" />
<uses-feature android:name="android.hardware.camera" />
<uses-feature android:name="android.hardware.camera.autofocus" />
<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
 
 <application
        android:icon="@drawable/icon_barcode_snip7"
        android:label="@string/app_name" >
        <activity
            android:name=".BarcodeManagerActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity 
            android:name=".DrawBarcodeActivity"
            android:label="@string/app_activity_DrawBarcode" >
        </activity> 
        
        <activity 
            android:name=".SettingsActivity"
            android:label="@string/app_activity_Settings" >
        </activity> 
        
        <activity
            android:name=".NewBarcodeActivity"
            android:label="@string/app_activity_NewBarcode" >
        </activity>
        
        <activity
            android:name=".EditBarcodeActivity"
            android:label="@string/app_activity_EditBarcode" >
        </activity>
        
        <activity
            android:name=".CameraViewActivity"
            android:label="@string/app_activity_CameraView" >
        </activity>
                
         <activity
            android:name="com.bodner67.BarcodeManager.WebViewActivity"
            android:label="@string/app_activity_WebView" >
        </activity>   
</application>
</manifest>